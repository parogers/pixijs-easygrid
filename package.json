        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [],
    "author": "",
    "license": "GPL-3.0",
    "peerDependencies": {
        "pixi.js": ">=8.0.2"
    },
    "devDependencies": {
        "browser-sync": "^3.0.3",
        "esbuild": "^0.24.0",
        "typescript": "^5.6.3"
    }
}
